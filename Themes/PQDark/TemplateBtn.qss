QWidget QLabel {
    color: #c4c4c4;
}
QWidget[selected="false"] {
    background: transparent;
}
QWidget[selected="false"]#Hover {
    background: qlineargradient(x1 : 0, y1 : 0, x2 : 1, y2 : 0, stop : 0.0 transparent, stop : 0.5 #8a3b16, stop : 1.0 transparent);
}
QWidget[selected="true"] {
    background: qlineargradient(x1 : 0, y1 : 0, x2 : 1, y2 : 0, stop : 0.0 transparent, stop : 0.5 #8a3b16, stop : 1.0 transparent);
}